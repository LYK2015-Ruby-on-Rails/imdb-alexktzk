
<div class="container center">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form" }) do |f| %>
      <div class="field form-group">
        <%= f.label :email, :html => { :class => "form-control" }  %><br/>
        <%= f.email_field :email, autofocus: true, :html => { :class => "form-control" } %>
      </div>

      <div class="field form-group">
        <%= f.label :password,:html => { :class => "form-control" } %><br/>
        <%= f.password_field :password, autocomplete: "off", :html => { :class => "form-control" } %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field form-group">
            <%= f.check_box :remember_me, :html => { :class => "form-control" } %>
            <%= f.label :remember_me, :html => { :class => "form-control" } %>
          </div>
      <% end -%>

      <div class="actions form-group">
        <%= f.submit "Log in", :html => { :class => "form-control" } %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>